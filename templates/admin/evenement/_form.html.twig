{% if show_confirmation|default(false) %}
    {% set attr = {'data-confirmation': 'true'} %}
    {{ include('blog/_delete_post_confirmation.html.twig') }}
{% endif %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="row">
            <div class="col">
                 <div class="alert alert-secondary" > {{form_errors(form.eventDate)}} {{form_errors(form.eventType)}} {{form_errors(form.eventLieu)}} {{form_errors(form.eventInfos)}}</div>
            </div>
        </div>
       
 <table class="table table-striped table-middle-aligned table-sm">       
        <tbody>        
            <tr>			 
                <td>{{ form_label(form.eventDate) }}</td>
                <td>{{ form_widget(form.eventDate)}}</td>
                 <td>{{ form_label(form.eventType) }}</td>
                <td>{{ form_widget(form.eventType) }}</td>    
                
	        </tr>

            <tr>			 
                <td>{{ form_label(form.eventLieu) }}</td>
                <td>{{ form_widget(form.eventLieu)}}</td>
                 <td>{{ form_label(form.eventInfos) }}</td>
                <td>{{ form_widget(form.eventInfos) }}</td>    
                  
	        </tr>
        </tbody>
    </table>
 

    <button type="submit" class="{{ button_css|default("btn btn-primary") }}">
        <i class="fa fa-save" aria-hidden="true"></i> {{ button_label|default('label.create_post'|trans) }}
    </button>

    {% if include_back_to_home_link|default(false) %}
        <a href="{{ path('admin_post_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>
    {% endif %}

{{ form_end(form) }}
