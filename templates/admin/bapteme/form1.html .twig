<div class="modal fade" id="createmodel" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
           {{ form_start(form, {'action': url)}) }}
                <div class="row">
                                <div class="col">
                                        <div class="alert alert-secondary" > {{form_errors(form.dateBapteme)}} {{form_errors(form.lieu)}} {{form_errors(form.baptiserPar)}}</div>
                                
                                    </div>
                                </div>
                            
                        <table class="table table-striped table-middle-aligned table-sm">       
                                <tbody>        
                                    <tr>			 
                                        <td>{{ form_label(form.dateBapteme) }}</td>
                                        <td>{{ form_widget(form.dateBapteme)}}</td>
                                        <td>{{ form_label(form.lieu) }}</td>
                                        <td>{{ form_widget(form.lieu) }}</td>    
                                        <td>{{ form_label(form.baptiserPar) }}</td>
                                        <td>{{ form_widget(form.baptiserPar)}}</td>    
                                    </tr>

                                </tbody>
                        </table>

                   </div>
                   <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save" aria-hidden="true"></i> Save changes</button>
             </div>                  
             {{ form_end(form) }}
        </div>    
    </div>
</div>
