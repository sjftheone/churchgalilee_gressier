        </tbody>
    </table>

  </div>
  

  <div class="tab-pane fade" id="Position_Eglise" role="tabpanel" aria-labelledby="Position_Eglise-tab">

      <table class="table table-striped table-middle-aligned">
          <thead>
          <tr>
              <th scope="col">date Baptême (J/M/A)</th>
              <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Lieu de baptême</th>
              <th scope="col">Baptisé par</th>
              <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
          </tr>
          </thead>
          <tbody>
          {% for bapteme in baptemes %}
              <tr>
                  <td>{{ bapteme.dateBapteme |date('d-m-Y')}}</td>
                  <td>{{bapteme.lieu}}</td>
                  <td>{{ bapteme.baptiserPar}}</td>


                  <td class="text-right">
                      <div class="item-actions">
                          <a href="{{ path('admin_bapteme_show', {id: bapteme.id}) }}" class="btn btn-sm btn-success">
                              <i class="fa fa-eye" aria-hidden="true"></i> Show
                          </a>

                          {#
                          <a href="{{ path('admin_bapteme_edit', {id: bapteme.id}) }}" class="btn btn-sm btn-primary">
