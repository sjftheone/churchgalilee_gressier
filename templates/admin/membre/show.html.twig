                          </a>
                          #}
                      </div>
                  </td>
              </tr>
          {% else %}
              <tr>
                  <td colspan="4" align="center">Aucun bapteme found</td>
              </tr>
          {% endfor %}
          </tbody>
      </table>

  </div>


    <div class="tab-pane fade" id="Integration" role="tabpanel" aria-labelledby="Integration-tab">
        
        <table class="table table-striped table-middle-aligned">
            <thead>
            <tr>
                <th scope="col">date d'entrée (j/m/a)</th>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Infos</th>
                <th scope="col">Date sortie (j/m/a)</th>
                <th scope="col">Motif</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for integration in integrations %}
                <tr>

                    <td>{{ integration.dateIn |date('d-m-Y')}}</td>
                    <td>{{integration.infosIn}}</td>
                    <td>{{ integration.dateOut |date('d-m-Y')}}</td>
                    <td>{{ integration.infosOut}}</td>

                    <td class="text-right">
                        <div class="item-actions">
                            <a href="{{ path('admin_integration_show', {id: integration.id}) }}" class="btn btn-sm btn-success">
                                <i class="fa fa-eye" aria-hidden="true"></i> Show
                            </a>
{#
                            <a href="{{ path('admin_integration_edit', {id: integration.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i> edit
                            </a>
#}
                        </div>
                    </td>

                </tr>


            {% else %}
                <tr>
                    <td colspan="4" align="center">Aucune integration found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


    <div class="tab-pane fade" id="Evenement" role="tabpanel" aria-labelledby="Evenement-tab">

        <table class="table table-striped table-middle-aligned">
            <thead>
            <tr>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Date(j/m/a)</th>
                <th scope="col">Type d'événement</th>

                <th scope="col">Lieu</th>
                <th scope="col">Infos add</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for evenement in evenements %}
                <tr>
                    <td>{{ evenement.eventDate |date('d-m-Y')}}</td>
                    <td>{{evenement.eventType}}</td>
                    <td>{{ evenement.eventLieu}}</td>
                    <td>{{ evenement.eventInfos}}</td>

                    <td class="text-right">
                        <div class="item-actions">
                            <a href="{{ path('admin_evenement_show', {id: evenement.id}) }}" class="btn btn-sm btn-success">
                                <i class="fa fa-eye" aria-hidden="true"></i> Show
                            </a>
{#
                            <a href="{{ path('admin_evenement_edit', {id: evenement.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i> edit
                            </a>
#}
                        </div>
