 {% endfor %}
    <h3>Modifier utilisateur</h3>

   {{ form_start(form) }}
     <table class="table table-striped table-middle-aligned table-sm border=2">       
        <tbody>
            <tr>
                <td>{{ form_label(form.username) }}</td>
                <td>{{ form_widget(form.username)}}</td>
            </tr>
            <tr>			 
                <td>{{ form_label(form.fullName) }}</td>
                <td>{{ form_widget(form.fullName)}}</td>
            </tr>
            <tr>			 
                <td>{{ form_label(form.email) }}</td>
                <td>{{ form_widget(form.email)}}</td>
            </tr>           
        </tbody>
    </table>
 
    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> Save
    </button>
    {{ form_end(form) }}

{% endblock %}

