{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="row">
            <div class="col">
                 <div class="alert alert-secondary" > {{form_errors(form.infosIn)}} {{form_errors(form.infosOut)}} {{form_errors(form.dateOut)}}</div>
          
            </div>
        </div>
       
 <table class="table table-striped table-middle-aligned table-sm">       
        <tbody>        
            <tr>			 
                <td>{{ form_label(form.dateIn) }}</td>
                <td>{{ form_widget(form.dateIn)}}</td>
                 <td>{{ form_label(form.infosIn) }}</td>
                <td>{{ form_widget(form.infosIn) }}</td>    
                
	        </tr>

            <tr>			 
                <td>{{ form_label(form.dateOut) }}</td>
                <td>{{ form_widget(form.dateOut)}}</td>
                 <td>{{ form_label(form.infosOut) }}</td>
                <td>{{ form_widget(form.infosOut) }}</td>    
                  
	        </tr>



        </tbody>
    </table>
 

     <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i>Save changes</button>

    {% if include_back_to_home_link|default(false) %}
        <a href="{{ path('admin_post_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>
    {% endif %}
{{ form_end(form) }}
