<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Photo de {{ personne.nom }} {{ personne.prenom }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
           {% if personne.imageName%}
     <img src="{{vich_uploader_asset(personne,'imageFile') }}" alt="card img" style="width:100%; height:auto;">
	 {% else %}
	 <img src="{{ asset('/images/properties/Photo_not_Found.jpg')}}" alt="card img" style="width:100%; height:auto;">
	 {% endif %}
      </div>
      
    </div>
  </div>
</div>




    <table class="table table-striped table-middle-aligned table-sm">
       
        <tbody>        
            <tr>			 
                <td>{{ form_label(form.nom) }}</td>
                <td>{{ form_widget(form.nom)}}</td>
                 <td>{{ form_label(form.prenom) }}</td>
                <td>{{ form_widget(form.prenom) }}</td>
                 <td rowspan="3" style="width: 10%">

<a class="bg-circle bg-primary"  data-toggle="modal" href="#exampleModal">
    {% if personne.imageName%}
     <img src="{{vich_uploader_asset(personne,'imageFile') }}" alt="card img" style="width:100%; height:auto;">
	 {% else %}
	 <img src="{{ asset('/images/properties/Photo_not_Found.jpg')}}" alt="card img" style="width:100%; height:auto;">
	 {% endif %}
</a>
                 </td>               
	        </tr>
			
             <tr>			 
                <td>{{ form_label(form.sexe) }}</td>
                <td>{{ form_widget(form.sexe) }}</td>
				 <td>{{ form_label(form.civilite) }}</td>
                <td>{{ form_widget(form.civilite) }}</td>
	        </tr>
			
             <tr>			 
                <td>{{ form_label(form.dateNaissance)}}</td>
                <td>{{ form_widget(form.dateNaissance) }}</td>
				 <td>{{ form_label(form.lieuNaissance) }}</td>
                <td>{{ form_widget(form.lieuNaissance) }}</td>
	        </tr>
			

                         <tr>			 
                <td>{{ form_label(form.nationalite) }}</td>
                <td>{{ form_widget(form.nationalite) }}</td>
				 <td>{{ form_label(form.profession) }}</td>
                <td>{{ form_widget(form.profession) }}</td>
	        </tr>


             <tr>			 
                <td>{{ form_label(form.statutMat) }}</td>
                <td>{{ form_widget(form.statutMat) }}</td>
				 <td>{{ form_label(form.adresse) }}</td>
                <td>{{ form_widget(form.adresse) }}</td>
	        </tr>

            <tr>			 
